<%= stylesheet_pack_tag 'styles/user', media: 'all', 'data-turbolinks-track': 'reload' %>

<% content_for :navbar do %>
  <li class="nav-item mx-2 mt-1">
    <%= button_to 'My Profile', user_path(current_user), method: "get", class:"btn btn-outline-light" %>
  </li>
  <li class="nav-item mx-2 mt-1">
    <%= button_to 'Logout', logout_sessions_path, method: "delete", class:"btn btn-outline-light" %>
  </li>
<% end %>

<!-- Bootstrap Tabs Navigation -->
<div class="container pt-4">
  <ul class="nav nav-tabs" id="adminTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="orgs-tab" data-bs-toggle="tab" data-bs-target="#orgs" type="button" role="tab" aria-controls="orgs" aria-selected="true">Healthcare Organizations</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="admins-tab" data-bs-toggle="tab" data-bs-target="#admins" type="button" role="tab" aria-controls="admins" aria-selected="false">Healthcare Administrators</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="dispatchers-tab" data-bs-toggle="tab" data-bs-target="#dispatchers" type="button" role="tab" aria-controls="dispatchers" aria-selected="false">Dispatchers</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="drivers-tab" data-bs-toggle="tab" data-bs-target="#drivers" type="button" role="tab" aria-controls="drivers" aria-selected="false">Drivers</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="users-tab" data-bs-toggle="tab" data-bs-target="#users" type="button" role="tab" aria-controls="users" aria-selected="false">Users</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="appointments-tab" data-bs-toggle="tab" data-bs-target="#appointments" type="button" role="tab" aria-controls="appointments" aria-selected="false">Appointments</button>
    </li>
  </ul>
  
  <!-- Tab Content Container -->
  <div class="tab-content" id="adminTabsContent">

<!--=========================== ORGS ============================-->
<div class="tab-pane fade show active" id="orgs" role="tabpanel" aria-labelledby="orgs-tab">
<div class="container table-container table-responsive pt-3">
  <%= form_with(url: host_sysadmin_path(@sysadmin.id), method: 'patch', local: true) do |f| %>
  <div class="row pb-3">
    <div class="col">
      <%= f.text_field :host_org, placeholder: "Add a healthcare organization", class:"form-control" %>
    </div>
    <div class="col">
      <%= f.submit "Submit" , class: "btn btn-outline-dark" %>
    </div>
  </div>
<% end %>
<table class="table border-dark">
  <thead class="table-blue">
    <tr>
      <th>Organization</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @sysadmin.host_orgs.select{ |h| h != "N/A" }.each do |host| %>
      <tr>
        <td>
          <%= host %>
        </td>
        <td>
          <%= button_to 'Delete', unhost_sysadmin_path(current_user.id), params: {host: host}, method: :delete, class:"btn btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<!--=========================== HEALTHCARE ADMINS ============================-->
<div class="tab-pane fade" id="admins" role="tabpanel" aria-labelledby="admins-tab">
<div class="container table-container table-responsive pt-3">
<table class="table border-dark">
  <thead class="table-blue">
    <tr>
      <th>Dispatcher</th>
      <th>Approved by</th>
      <th>Approved?</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @healthcareadmins.each do |h| %>
      <tr>
        <td scope="row">
          <div class="container">
            <div class="row">
              <%= "#{h.first_name} #{h.middle_init} #{h.last_name}"%>
            </div>
            <div class="row">
              <%= "#{h.email} | #{h.phone}"%>
            </div>
          </div>
        </td>
        <td>
          <% if h.sysadmin %>
            <%= "#{h.sysadmin.first_name} #{h.sysadmin.last_name}" %>
          <% else %>
            No Administrator is associated with this dispatcher yet.
          <% end %>
        </td>
        <td>
          <% if h.approved %>
            <span style="color:green">True</span>
          <% else %>
            <span style="color:red">False</span>
          <% end %>
        </td>
        <td>
          <div class="row pb-2">
            <% if h.approved %>
              <%= button_to "Unapprove", approve_healthcareadmin_path(h.id), method: :post, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
            <% else %>
              <%= button_to "Approve", approve_healthcareadmin_path(h.id), method: :post, data: { confirm: "Are you sure?" }, class: "btn btn-outline-dark" %>
            <% end %>
          </div>
          <div class="row pb-2">
            <%= button_to "Reset Password", reset_user_path(h.id), method: 'patch', data: { confirm: "Are you sure?" }, class: "btn btn-outline-dark" %>
          </div>
          <div class="row pb-2">
            <%= button_to 'Delete', healthcareadmin_path(h.id), method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-outline-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

