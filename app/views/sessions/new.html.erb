<% @login_type = params[:login] %>
<br><br><br><br><br><br><br><br><br>
<div class="text-center">
  <h4>Login as <%= @login_type %></h4>
  <br>
  <%= form_with(url: create_session_url, local: true) do |form| %>
    <div class="col">
      <div class="row-md-offset-5">
        <%= text_field_tag :email, nil, placeholder: 'Email' %>
      </div>
      <div class="row-md-offset-5">
        <%= password_field_tag :password, nil, placeholder: 'Password' %>
      </div>
      <div class="row-md-offset-5">
        <%= form.submit "Login" ,class:"btn btn-primary"%>
        </div>
      <%= hidden_field_tag :login_type, @login_type %>  
    </div>
  <% end %>
</div>
