<% @login_type = params[:login] %>
<head>
  <style>
    input[type=text],input[type=password]{
      line-height: 3;
      width: 12%;
      font-size: 20px;
    }
  </style>
</head>
<body>
<div id='signin-bg' class='bg'>
  <br><br><br><br><br><br><br><br><br>
  <div class="text-center">
    <h3>Login as <%= @login_type %></h3>
    <br>
    <%= form_with(url: create_session_url, local: true) do |form| %>
      <div class="col">
        <div class="row-md-offset-5" style="padding:5px;">
          <%= text_field_tag :email, nil, placeholder: 'Email' %>
        </div>
        <div class="row-md-offset-5" style="padding:5px;">
          <%= password_field_tag :password, nil, placeholder: 'Password' %>
        </div>
        <div class="row-md-offset-5" style="padding:5px;">
          <%= form.submit "Login" ,class:"btn btn-primary big-btn"%>
        </div>
        <%= hidden_field_tag :login_type, @login_type %>
      </div>
    <% end %>
  </div>
</div>
</body>
