<p id="notice"><%= notice %></p>

<% if logged_in? %>
    <% case session[:login_type] %>
    <% when "P" %>
        <% redirect_to patients_home %>
    <% when "D" %>
        <% redirect_to drivers_home %>
    <% when "A" %>
        <% redirect_to admins_home %>
    <% end %>
<% end %>

