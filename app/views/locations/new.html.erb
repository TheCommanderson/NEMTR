<section class="p-4 container centered-card">
  <div class="row p-lg-5 bg-dark rounded">
    <h1 class="text-center">New Address</h1>
    <%= form_with(model: [:patient, @location], local: true) do |form| %>
    <% if @location.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <%= pluralize(@location.errors.count, "error(s)! Please fix the following issues:") %>
        <ul>
          <% @location.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row py-2">
      <div class="form-group col-md">
        <%= form.label :name, "Address Nickname" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="row py-2">
      <div class="form-group col-md">
        <%= form.label :addr1, "Address" %>
        <%= form.text_field :addr1, class: "form-control" %>
      </div>
    </div>

    <div class="row py-2">
      <div class="form-group col-md">
        <%= form.label :addr2, "Address (cont.)" %>
        <%= form.text_field :addr2, class: "form-control" %>
      </div>
    </div>

    <div class="row py2">
      <div class="form-group col-md">
        <%= form.label :city %>
        <%= form.text_field :city, class: "form-control" %>
      </div>
      <div class="form-group col-md">
        <%= form.label :state %>
        <%= form.text_field :state, class: "form-control state-form" %>
      </div>
      <div class="form-group col-md">
        <%= form.label :zip %>
        <%= form.number_field :zip, class: "form-control zip-form" %>
      </div>
    </div>
    <% if params.has_key?(:is_home) %>
      <%= form.hidden_field :home, value: true %>
    <% end %>
    <div class="text-center py-4">
      <%= form.submit "Save Address", class: "btn btn-outline-light" %>
    </div>
  <% end %>
</div>
</section>