<p id="notice"><%= notice %></p>

<p>
  <strong>Patient:</strong>
  <% @patient = Patient.find(@appointment.patient_id) %>
  <%= @patient.first_name %> <%= @patient.last_name %>
</p>

<p>
  <strong>Driver:</strong>
  <% if @appointment.status == 0 %>
    <span style="color:red">unassigned</span>
  <% else %>
    <% @driver = Driver.find(@appointment.driver_id) %>
    <%= @driver.first_name %> <%= @driver.last_name %>
  <% end %>
</p>

<p>
  <strong>Datetime:</strong>
  <%= @appointment.datetime %>
</p>

<p>
  <strong>Patient Address:</strong> 
  <p><%= @appointment.location[0][:name] %></p>
  <p><%= @appointment.location[0][:addr1] %> <%= @appointment.location[0][:addr2] %></p>
  <p><%= @appointment.location[0][:city] %>, <%= @appointment.location[0][:state] %> <%= @appointment.location[0][:zip] %></p>
</p>
  
<p>
  <strong>Destination Address:</strong>
  <p><%= @appointment.location[1][:name] %></p>
  <p><%= @appointment.location[1][:addr1] %> <%= @appointment.location[1][:addr2] %></p>
  <p><%= @appointment.location[1][:city] %>, <%= @appointment.location[1][:state] %> <%= @appointment.location[1][:zip] %></p>
</p>

<p>
  <strong>Status:</strong>
  <%= @appointment.status %>
</p>

<p>
  <strong>Map:</strong>
  <%= @appointment.location[0][:address] %>
  <%= @appointment.location[0][:coordinates] %>
</p>

<%= link_to 'Back', url_for(:back) %>
