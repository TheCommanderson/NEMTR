<style>
  .btn-primary{
    margin: auto;
    display: table;
    width: 200px;
    line-height: 60px;
    font-size: 20px;
  }
</style>
<p style="padding-top: 40px;">
<%= form_with(model: @schedule, local: true, url: driver_schedule_path) do |form| %>
  <table class="schedule" style="width: 70%;">
      <tr>
          <th>
          Monday,
          <br><%= @days_of_week[0] %>
          </th>
          <th>Tuesday,
          <br><%= @days_of_week[1] %>
          </th>
          <th>Wednesday,
          <br><%= @days_of_week[2] %>
          </th>
          <th>Thursday,
          <br><%= @days_of_week[3] %>
          </th>
          <th>Friday,
          <br><%= @days_of_week[4] %>
          </th>
          <th>Saturday,
          <br><%= @days_of_week[5] %>
          </th>
          <th>Sunday,
          <br><%= @days_of_week[6] %>
          </th>
      </tr>
      <tr>
          <td><input type="checkbox">
          <td><input type="checkbox">
          <td><input type="checkbox">
          <td><input type="checkbox">
          <td><input type="checkbox">
          <td><input type="checkbox">
          <td><input type="checkbox">

      </tr>
      <tr>
          <td>
          <%= form.time_select :Monday1, {minute_step: 15, ampm: true, default: {hour: @default_vals['Monday'][0], min: @default_vals['Monday'][1]}} %>
          <br>to<br>
          <%= form.time_select :Monday2, {minute_step: 15, ampm: true, default: {hour: @default_vals['Monday'][2], min: @default_vals['Monday'][3]}} %>

          <td>
          <%= form.time_select :Tuesday1, {minute_step: 15, ampm: true, default: {hour: @default_vals['Tuesday'][0], min: @default_vals['Tuesday'][1]}} %>
          <br>to<br>
          <%= form.time_select :Tuesday2, {minute_step: 15, ampm: true, default: {hour: @default_vals['Tuesday'][2], min: @default_vals['Tuesday'][3]}} %>

          <td>
          <%= form.time_select :Wednesday1, {minute_step: 15, ampm:true, default: {hour: @default_vals['Wednesday'][0], min: @default_vals['Wednesday'][1]}} %>
          <br>to<br>
          <%= form.time_select :Wednesday2, {minute_step: 15, ampm:true, default: {hour: @default_vals['Wednesday'][2], min: @default_vals['Wednesday'][3]}} %>

          <td>
          <%= form.time_select :Thursday1, {minute_step: 15, ampm:true, default: {hour: @default_vals['Thursday'][0], min: @default_vals['Thursday'][1]}} %>
          <br>to<br>
          <%= form.time_select :Thursday2, {minute_step: 15, ampm:true, default: {hour: @default_vals['Thursday'][2], min: @default_vals['Thursday'][3]}} %>

          <td>
          <%= form.time_select :Friday1, {minute_step: 15, ampm:true, default: {hour: @default_vals['Friday'][0], min: @default_vals['Friday'][1]}} %>
          <br>to<br>
          <%= form.time_select :Friday2, {minute_step: 15, ampm:true, default: {hour: @default_vals['Friday'][2], min: @default_vals['Friday'][3]}} %>

          <td>
          <%= form.time_select :Saturday1, {minute_step: 15, ampm:true, default: {hour: @default_vals['Saturday'][0], min: @default_vals['Saturday'][1]}} %>
          <br>to<br>
          <%= form.time_select :Saturday2, {minute_step: 15, ampm:true, default: {hour: @default_vals['Saturday'][2], min: @default_vals['Saturday'][3]}} %>

          <td>
          <%= form.time_select :Sunday1, {minute_step: 15, ampm:true, default: {hour: @default_vals['Sunday'][0], min: @default_vals['Sunday'][1]}} %>
          <br>to<br>
          <%= form.time_select :Sunday2, {minute_step: 15, ampm:true, default: {hour: @default_vals['Sunday'][2], min: @default_vals['Sunday'][3]}} %>


      </tr>
  </table>

  <div class="actions" style="padding-top: 20px;">
    <%= form.submit "Submit Changes", class: "btn-primary" %>
  </div>

<% end %>
