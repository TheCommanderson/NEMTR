<% @currentFirstName = @patients.find(@currentPatient).first_name%>
<% @currentLastName = @patients.find(@currentPatient).last_name%>

<p id="notice"><%= notice %></p>
<h2>Patient's Page(will delete this)</h2>
<h1>Upcoming Rides for <%= @currentFirstName %> <%= @currentLastName%>:</h1>
<table border="1"cellpadding="5"cellspacing="1">
  <thead>
    <tr>
      <th>Driver</th>
      <th>Date & Time</th>
      <th>Status</th>
      <th>Destination</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
  <%#TODO: find current patient using session %>
    <% @appointments.where('patient_id' => @currentPatient).each do |appointment| %>
    <tr>
      <% @tempPatient = @patients.find(appointment.patient_id) %>

      <% if !@drivers.find(appointment.driver_id) %>
        <% @tempDriver = "None"  %>
      <% else %>
        <% @tempDriver = ->(x) {x.first_name + ' ' + x.last_name}.call(@drivers.find(appointment.driver_id)) %>
      <% end %>
      <td><%= @tempDriver %></td>
      <td><%= appointment.datetime %></td>
      <td><%= appointment.status %></td>
      <td><%= appointment.location.name %></td>
      <td><%= appointment.location.addr1 %></td>
      <%#TODO: edit page should follow UI mockup %>
      <td><%= link_to 'Update Ride', edit_appointment_path(appointment) %>
      <%= link_to 'Cancel Ride', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<h3><%= link_to 'Request a Ride', new_appointment_path %></h3>
