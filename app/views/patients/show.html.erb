<% content_for :navbar do %>
  <li class="nav-item mx-2 mt-1">
    <%= button_to 'My Profile', user_path(current_user), method: "get", class:"btn btn-outline-light", disabled: true %>
  </li>
  <li class="nav-item mx-2 mt-1">
    <%= button_to 'Logout', logout_sessions_path, method: "delete", class:"btn btn-outline-light" %>
  </li>
<% end %>

<section class="p-4 text-center container centered-card">
  <div class="row p-md-5 bg-dark rounded">
    <h1><%= "#{@user.first_name} #{@user.middle_init} #{@user.last_name}"%></h1>
    <div class="row">
      <strong class="text-r2h-grey">Email |
        <%= "#{@user.email}" %>
      </strong>
    </div>
    <div class="row">
      <strong class="text-r2h-grey">
        Phone |
        <%= "#{@user.phone}" %>
      </strong>
    </div>
    <div class="row">
      <strong class="text-r2h-grey">
        Patient at
        <%= "#{@user.host_org}" %>
      </strong>
    </div>
    <div class="row">
      <span class="border border-light border-2 col-md-6 mx-auto">
        <strong class="text-r2h-grey">
          Home Address
        </strong>
        <div class="text-r2h-grey px-2">
          <% if @home.nil? %>
            No Home Address Stored
          <% else %>
            <div class="row">
              <%= "#{@home.name}" %>
            </div>
            <div class="row">
              <%= "#{@home.addr1}" %>
            </div>
            <% if @home.addr2 %>
              <div class="row">
                <%= "#{@home.addr2}" %>
              </div>
            <% end %>
            <div class="row">
              <%= "#{@home.city}, #{@home.state}, #{@home.zip}" %>
            </div>
          <% end %>
        </div>
      </span>
    </div>
    <div class="row py-4">
      <div class="col-md pb-2">
        <%= button_to 'Edit Info', edit_user_path, method: "get", class:"btn btn-outline-light" %>
      </div>
      <div class="col-md pb-2">
        <%= button_to 'Edit Home Address', new_patient_location_path(current_user), method: "get", params: {is_home: true}, class:"btn btn-outline-light" %>
      </div>
      <div class="col-md">
        <%= button_to 'Edit Password', password_user_path, method: "get", class:"btn btn-outline-light" %>
      </div>
    </div>
  </div>
</section>