<div id="view-comments">
  <h1>Viewing all Comments for
    <%= @patient.first_name + " " + @patient.last_name %>
  </h1>
  <% if @patient.comments.empty? %>
    <h3>No Comments!</h3>
  <% else %>
    <table class="comment-table">
      <% @patient.comments.each do |comment| %>
        <tr>
        <td class="comment-row">
          <%= comment %>
        </td>
      <% end %>
    </table>
  <% end %>
  <br>
  <%= link_to 'Add Comment', comment_patient_path(@patient.id), method: :get, class: "btn btn-primary big-btn" %>
</div>
<p style='padding-left: 20px;'><%= link_to 'Back', root_url, class: "btn btn-secondary back-btn" %></p>
