<p style="padding-top: 2%;"></p>
<div class="comment-page-1">
  <h3>Do you have any comments regarding <%= @patient.first_name %>?</h3>

  <%= form_with(model: @patient, local: true, url: append_patient_path) do |form| %>
    <%= form.text_area :comment, size: "30x10", style: 'width: 40%;'%>

    <%= form.submit "Submit", class: "btn btn-primary big-btn", style: 'margin-top: 1%' %>
  <% end %>
</div>
<p style='padding-left: 20px;'><%= link_to 'Back', root_url, class: "btn btn-secondary back-btn" %></p>
