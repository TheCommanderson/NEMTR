<center>
<h1>Set Default Address</h1>
<%= form_with(model: @patient.preset, local: true, method: :post, url: saveAddress_patient_path) do |form| %>
      <%= form.label :addr1, "Address" %>
      <%= form.text_field :addr1 %>
      <%= form.label :addr2, "Address (cont.)" %>
      <%= form.text_field :addr2 %>
      <%= form.label :city %>
      <%= form.text_field :city %>
      <%= form.label :state %>
      <%= form.text_field :state %>
      <%= form.label :zip %>
      <%= form.number_field :zip %>
      <%= form.label :name, "Address Nickname" %>
      <%= form.text_field :name %>
      <br><br>
      <%= form.submit "Save Address", class: "btn btn-primary big-btn" %>
      <br>
    <% end %>
    <%= button_to "Delete", { action: "saveAddress"}, :params => {:type => "reset"}, method: :post, class: "btn btn-secondary sm-btn" %>

</center>
<p style='padding-left: 20px;'><%= link_to 'Back', patients_home_path, class: "btn btn-secondary back-btn" %></p>